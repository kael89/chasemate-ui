{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "prettier", "simple-import-sort"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-continue": "off",
    "no-plusplus": "off",
    "import/prefer-default-export": "off",
    "prettier/prettier": "error",
    "simple-import-sort/sort": "error"
  }
}
